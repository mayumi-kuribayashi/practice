# 現在のディレクトリ位置をrootとする
root = true

# 全てのファイルに対する設定
[*]
# 改行コード
end_of_line = lf
# 文字コード
charset = utf-8
# ファイル末尾に空行を追加する
insert _final_newline = true
# 行末尾の空白文字を削除する
trim_trailing whitespace = true
# インデント指定
indent_style = space

# 指定した拡張子のファイルに対する設定
[*.{js,jsx,css,pcss,pug}]
# インデント幅
indent_size = 2